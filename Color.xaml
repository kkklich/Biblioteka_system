        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biblioteka_system"
        mc:Ignorable="d"
        Title="Color" Height="400" Width="600">
    <Grid Background="#FF394DA2">
        <Label x:Name="label" Content="Zmiana koloru tła" HorizontalAlignment="Left" Height="73" Margin="106,31,0,0" VerticalAlignment="Top" Width="358" Foreground="Brown" FontSize="36" />
        <ComboBox x:Name="cmb_color" HorizontalAlignment="Left" Height="37" Margin="46,125,0,0" VerticalAlignment="Top" Width="168">
        <ComboBoxItem>Zielony</ComboBoxItem>
        <ComboBoxItem>Niebieski</ComboBoxItem>
        <ComboBoxItem>Czerwony</ComboBoxItem>
